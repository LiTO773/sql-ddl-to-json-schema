      "maximum": 9999999999
    },
    "weight": {
      "type": "number",
      "minimum": -999,
      "maximum": 999
    },
    "status": {
      "type": "string"
    },
    "dob": {
      "type": "string",
      "format": "date"
    },
    "tob": {
      "type": "string",
      "format": "time"
    },
    "initials": {
      "type": "string",
      "maxLength": 3
    },
    "prefix": {
      "type": "string",
      "maxLength": 3
    },
    "suffix": {
      "type": "string",
      "maxLength": 1
    },
    "sequence": {
      "type": "string",
      "maxLength": 20
    },
    "avatar": {
      "type": "string",
      "maxLength": 65535
    },
    "motto": {
      "type": "string",
      "maxLength": 50
    },
    "history": {
      "type": "string",
      "maxLength": 255
    },
    "gender": {
      "type": "string",
      "enum": [
        "M",
        "F"
      ]
    },
    "shape": {
      "type": "string"
    },
    "pattern": {
      "type": "string"
    }
  },
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
