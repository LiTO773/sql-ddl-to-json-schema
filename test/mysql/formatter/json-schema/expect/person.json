{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$comment": "JSON Schema for person table",
  "$id": "person",
  "title": "person",
  "description": "test table",
  "type": "object",
  "required": [
    "id",
    "name"
  ],
  "definitions": {
    "id": {
      "$comment": "primary key",
      "type": "integer",
      "description": "primary key test",
      "minimum": 1,
      "maximum": 1.2089258196146292e+24
    },
    "name": {
      "type": "string",
      "maxLength": 65535,
      "default": "Jane \"Doe\" O`neil"
    },
    "nickname": {
      "type": "string",
      "maxLength": 20,
      "default": "J"
    },
    "ssn": {
      "type": "integer",
      "maximum": 32767,
      "minimum": -32768
    },
    "height": {
      "type": "number",
